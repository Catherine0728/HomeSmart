<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_relativelayout_header"
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:background="@drawable/home_title_bg"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/main_head_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:src="@drawable/home_left_back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/main_head_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/main_head_back"
        android:src="@drawable/home_left_back"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_head_back_text"
        style="@style/main_head_title_back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/main_head_left"
        android:paddingRight="10dp"
        android:text="返回"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_head_title_text"
        style="@style/main_head_title_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5.0dip"
        android:text=""
        android:visibility="visible" />

    <ImageView
        android:id="@+id/main_head_lastbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2.0dip"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/main_head_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/home_shu"
        android:layout_toLeftOf="@+id/main_head_lastbt"
        android:visibility="gone" />
    
     <ImageView
        android:id="@+id/main_head_pre_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/home_right_add"
        android:layout_toLeftOf="@+id/main_head_right"
        android:visibility="gone" />

    <TextView
        android:id="@+id/main_head_right_text"
        style="@style/main_head_title_right_text"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:text=""
        android:visibility="gone" />

</RelativeLayout>