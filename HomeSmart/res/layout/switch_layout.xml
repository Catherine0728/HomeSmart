<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <Button
        android:id="@+id/switch_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fill_margin"
        android:background="@drawable/btn_green_big"
        android:padding="@dimen/fill_padding"
        android:text="一键全关闭/打开"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/switch_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_switch_close"
        android:scaleType="fitXY" />

    <ListView
        android:id="@+id/home_item_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/listview_bg_color"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/tp_list_divider"
        android:dividerHeight="1dip"
        android:listSelector="#00000000" />

</LinearLayout>