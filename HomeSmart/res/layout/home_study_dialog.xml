<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/transparent"
    android:gravity="center" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_for_progress"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="@android:style/Widget.ProgressBar.Large.Inverse"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="center"
            android:indeterminateDrawable="@anim/image_progress" />

        <ScrollView style="@style/scrollview_fill" >

            <TextView
                android:id="@+id/tv_metion_msg"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_two_zero"
                android:paddingLeft="@dimen/dp_for_zero"
                android:paddingRight="@dimen/dp_for_zero"
                android:paddingTop="@dimen/dp_two_zero"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16" />
        </ScrollView>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sure_btn"
                style="@style/dialogbtn"
                android:background="@drawable/btn_green_big"
                android:text="@string/confirm"
                android:visibility="gone" />

            <Button
                android:id="@+id/cancel_btn"
                style="@style/dialogbtn"
                android:background="@drawable/btn_green_big"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>